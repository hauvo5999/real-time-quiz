# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
# Main Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=elsa_quiz
DB_USER=postgres
DB_PASSWORD=your_secure_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Redis Pub/Sub Configuration
REDIS_PUBSUB_HOST=localhost
REDIS_PUBSUB_PORT=6379
REDIS_PUBSUB_PASSWORD=your_redis_password

# WebSocket Configuration
WS_PORT=8080
WS_PATH=/ws

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# File Upload
MAX_FILE_SIZE=5242880  # 5MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Quiz Configuration
MAX_QUESTIONS_PER_QUIZ=50
MAX_PARTICIPANTS_PER_QUIZ=500
QUIZ_SESSION_TIMEOUT=3600  # 1 hour in seconds

# Cache Configuration
CACHE_TTL=3600  # 1 hour in seconds
LEADERBOARD_CACHE_TTL=300  # 5 minutes in seconds

# Load Balancer
LOAD_BALANCER_ALGORITHM=round-robin
HEALTH_CHECK_INTERVAL=30  # seconds

# Security
CORS_ORIGIN=http://localhost:3000
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Metrics and Monitoring
ENABLE_METRICS=true
ENABLE_TRACING=true
TRACING_SERVICE_NAME=elsa-quiz-service

# Feature Flags
ENABLE_REAL_TIME_UPDATES=true
ENABLE_LEADERBOARD=true
ENABLE_QUIZ_ANALYTICS=true